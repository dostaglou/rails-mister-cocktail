<% options = ["love & care", "reckless abandon", "sugar, spice, and everything nice", "vengful rage", "an overwhelming sense of graditude", "humility and deference", "only G-d know's what"] %>

<div class="card-trip">
  <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
  <div class="card-trip-infos">
    <div>
      <h2><%= @cocktail.name  %></h2>
      <p><%= "#{@cocktail.name} is made with #{options.sample}. Also:" %></p>
      <% @doses.each do |dose| %>
        <p>
          <%= "#{dose.ingredient.name} @ #{dose.description}."%>
          <%= link_to dose_path(dose), method: :delete do %>
            <i class="far fa-trash-alt"></i>
          <% end %>
        </p>
      <% end %>
      <%= link_to "add a dose", new_cocktail_dose_path(@cocktail) %>
  </div>
</div>
